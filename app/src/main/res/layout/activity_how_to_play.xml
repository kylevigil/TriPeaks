<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kvapps.kyle.tripeaks.HowToPlay"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The goal of TriPeak solitaire is to eliminate all of the cards on the board. This is done by clicking on a card that is showing a value that is either one above or one below the discard value. The king wraps around to the ace and vise versa. The only cards that are clickable are the ones that aren&apos;t covered. Uncover cards to see their value."
        android:id="@+id/textView3"
        android:textColor="@android:color/black"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How To Play:"
        android:id="@+id/textView2"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/shadow" />
</RelativeLayout>
